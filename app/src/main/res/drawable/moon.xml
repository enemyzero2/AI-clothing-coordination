<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#33F5F5F5" /> <!-- Semi-transparent cool white for glow -->
            <size android:width="60dp" android:height="60dp" />
        </shape>
    </item>
    
    <!-- Middle glow -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="#66F5F5F5" /> <!-- More opaque cool white for middle glow -->
            <size android:width="52dp" android:height="52dp" />
        </shape>
    </item>
    
    <!-- Moon body -->
    <item android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp">
        <shape android:shape="oval">
            <solid android:color="#F5F5F5" /> <!-- Cool white for moon body -->
            <size android:width="44dp" android:height="44dp" />
        </shape>
    </item>
</layer-list>

