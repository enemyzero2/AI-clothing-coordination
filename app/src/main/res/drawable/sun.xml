<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#33FFEB3B" /> <!-- Semi-transparent yellow for glow -->
            <size android:width="80dp" android:height="80dp" />
        </shape>
    </item>
    
    <!-- Middle glow -->
    <item android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp">
        <shape android:shape="oval">
            <solid android:color="#66FFEB3B" /> <!-- More opaque yellow for middle glow -->
            <size android:width="70dp" android:height="70dp" />
        </shape>
    </item>
    
    <!-- Sun body -->
    <item android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp">
        <shape android:shape="oval">
            <solid android:color="#FFEB3B" /> <!-- Pure yellow for sun body -->
            <size android:width="60dp" android:height="60dp" />
        </shape>
    </item>
</layer-list>

